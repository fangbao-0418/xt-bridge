{
  "opts": {
    "template": "node_modules/@xt/docs",
    "destination": "./docs/",
    "encoding": "utf8",
    "title": "@xt/bridge"
  },
  "tags": {
    "allowUnknownTags": [
      "optional"
    ]
  },
  "plugins": [
    "node_modules/@xt/docs/typescript"
  ],
  "source": {
    "include": ["src"],
    "includePattern": "\\.(jsx|js|ts|tsx)$"
  }
}
